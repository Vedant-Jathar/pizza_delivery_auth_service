  "type": "commonjs",
  "main": "index.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=dev nodemon --watch src --ext ts,json --exec ts-node src/server.ts",
    "build": "tsc",
    "test": "jest --no-cache --coverage --all --runInBand",
    "test:watch": "jest --watch --runInBand",
    "format:fix": "npx prettier . --write",
    "format:check": "npx prettier . --check",
    "eslint:fix": "npx eslint . --fix",
    "eslint": "npx eslint .",
    "prepare": "husky",
    "start": "ts-node src/index.ts",
    "typeorm": "typeorm-ts-node-commonjs",
    "migration:generate": "typeorm-ts-node-commonjs migration:generate -d src/config/data-source.ts",
    "migration:run": "npx typeorm-ts-node-commonjs migration:run -d src/config/data-source.ts",
    "migration:revert": "npx typeorm-ts-node-commonjs migration:revert -d src/config/data-source.ts",
    "migration:create": "typeorm-ts-node-commonjs migration:create"
  },
  "devDependencies": {
    "@eslint/js": "^9.28.0",
    "@types/cors": "^2.8.19",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.0.0",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "@types/winston": "^2.4.4",
    "eslint": "^9.28.0",
    "husky": "^9.1.7",
    "jest": "^30.0.0",
    "lint-staged": "^16.1.0",
    "mock-jwks": "^1.0.10",
    "nodemon": "^3.1.10",
    "prettier": "3.5.3",
    "supertest": "^7.1.1",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.34.0"
  },
  "lint-staged": {
    "*.ts": [
      "npm run format:fix",
      "npm run eslint:fix"
    ]
  },
  "dependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.9",
    "@types/express": "^5.0.3",
    "bcryptjs": "^3.0.2",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "express-jwt": "^8.5.1", 
    "http-errors": "^2.0.0",
    "jsonwebtoken": "^9.0.2",
    "jwks-rsa": "^3.2.0",
    "pg": "^8.14.1",
    "reflect-metadata": "^0.2.2",
    "rsa-pem-to-jwk": "^1.1.3",
    "typeorm": "0.3.24",
    "uuid": "^11.1.0",
    "winston": "^3.17.0",
    "zod": "^3.25.67"
  }
